<Router AppAssembly="@typeof(MainLayout).Assembly" AdditionalAssemblies="@_extraAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private List<System.Reflection.Assembly> _extraAssemblies = new() { typeof(Main).Assembly };
}
